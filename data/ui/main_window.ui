<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="HyprBindMainWindow" parent="AdwApplicationWindow">
    <property name="title">HyprBind</property>
    <property name="default-width">1200</property>
    <property name="default-height">800</property>

    <child>
      <object class="GtkBox" id="main_content">
        <property name="orientation">vertical</property>

        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <child type="end">
              <object class="GtkBox">
                <property name="spacing">6</property>
                <property name="margin-end">6</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Mode:</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSwitch" id="mode_switch">
                    <property name="valign">center</property>
                    <property name="tooltip-text">Toggle between Safe mode (file only) and Live mode (IPC testing)</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="mode_label">
                    <property name="label">Safe</property>
                    <style>
                      <class name="title-4"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwBanner" id="chezmoi_banner">
            <property name="revealed">false</property>
            <property name="title">This file is managed by Chezmoi</property>
            <property name="button-label">Learn More</property>
          </object>
        </child>

        <child>
          <object class="AdwBanner" id="live_mode_banner">
            <property name="revealed">false</property>
            <property name="title">Live Mode Active - Changes are temporary until saved</property>
            <property name="button-label">Save Now</property>
          </object>
        </child>

        <child>
          <object class="GtkOverlay" id="main_overlay">
            <child>
              <object class="AdwTabView" id="tab_view">
                <property name="vexpand">true</property>
              </object>
            </child>

            <child type="overlay">
              <object class="GtkBox" id="loading_box">
                <property name="orientation">vertical</property>
                <property name="valign">center</property>
                <property name="halign">center</property>
                <property name="spacing">12</property>
                <property name="visible">false</property>

                <child>
                  <object class="GtkSpinner" id="loading_spinner">
                    <property name="spinning">true</property>
                    <property name="width-request">48</property>
                    <property name="height-request">48</property>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel" id="loading_label">
                    <property name="label">Loading configuration...</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
